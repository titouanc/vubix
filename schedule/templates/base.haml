!!! 5
%html
  %head
    %title
      VUBIX -
      = title
    %meta{'charset': 'UTF-8'}
    %link{'href': "//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css", 'rel': "stylesheet"}
    %link{'href': "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", 'rel': "stylesheet"}
    %script{'src': "http://code.jquery.com/jquery-1.11.3.min.js"}
    %script{'src': "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}
    %script{'src': "//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"}
    %script{'src': "http://momentjs.com/downloads/moment.js"}
    :css
      body {padding-top: 50px;}
      .large-icon {font-size: 70px;}
      .big-icon {font-size: 25px}
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{'type': 'button', 'data-toggle': 'collapse', 'data-target': '#navbar', 'aria-expanded': 'false', 'aria-controls': 'navbar'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{'href': '{% url "home" %}'} VUBIX
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{'href': '{% url "create_selection" %}'} Create my selection
            %li
              %a{'href': '{% url "list_selections" %}'} List all selections
            - for name, href in extra_menu
              %li
                %a{'href': "#{href}"}= name
    .container
      .row
        .col-md-12
          %h1= title
      #content
        - block content
    :javascript
      $(document).ready(function(){
        $('.moment').each(function(i, elem){
          var value = $(elem).html();
          var formated = moment(value).calendar();
          $(elem).html(formated);
        });
      });
